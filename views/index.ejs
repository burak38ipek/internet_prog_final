            <li><a href="#download-makale-2">Dev-C++ İndir</a></li>
        </ul>
    </div>

    <!-- Paragraflar -->
    <div id="makaleler" style="display: none;">
        <!-- Makalelerin içeriği buraya gelecek -->
        <% for (var i = 0; i < makaleler.length; i++) { %>
            <% var makale = makaleler[i]; %>
            <div id="<%= makale.id %>" style="display: none;">
            <%- makale.icerik %>
            </div>
        <% } %>
    </div>




