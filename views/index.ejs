        </div>

        <div class="content" id="content">
            <!-- Paragraflar buraya eklenecek -->
        </div>
    </div>

    <!-- Teknoloji Makaleleri -->
    <div id="teknoloji-makaleler" style="display: none;">
        <ul>
            <li><a href="#teknoloji-makale-1">Teknolojik Patlama</a></li>
